<div id="products" style="display: flex; gap: 20px;">

  
  <div style="flex: 0 0 300px; display: flex; flex-direction: column; gap: 20px;">

  
    <div style="background-color: #f8f8f8; border: 1px solid #ddd; border-radius: 5px; padding: 15px;">
    <h4 style="font-size: 1.25rem; font-weight: bold;">Categor√≠as</h4>
    <ul style="list-style-type: none; padding: 0;">
      <% @categories.each do |category| %>
        <li>
          <a href="<%= category_path(category) %>" style="color: #007bff; text-decoration: none;">
            <%= category.name %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

    <div style="background-color: #f8f8f8; border: 1px solid #ddd; border-radius: 5px; padding: 15px;">
      <h4 style="font-size: 1.25rem; font-weight: bold;">Editorial</h4>
      <% @editorials.each do |editorial| %>
        <li>
          <a href="<%= editorial_path(editorial) %>" style="color: #007bff; text-decoration: none;">
            <%= editorial.name %>
          </a>
        </li>
      <% end %>
      </ul>
    </div>

  </div>


  <div class="container" style="flex: 1; display: flex; flex-wrap: wrap; gap: 20px;">
    <% @products.each do |product| %>
      
      
      
        <div style="background-color: white; border: 1px solid #ddd; border-radius: 5px; overflow: hidden; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
          <% if product.img.attached? %>
            <%= image_tag url_for(product.img), alt: "Image for #{product.name}", style: "width: 100%; height: 300px; object-fit: cover;" %>
          <% else %>
            <img src="default_image_url.jpg" style="width: 100%; height: 200px; object-fit: cover;" alt="Default image for #{product.name}">
          <% end %>

          <div style="padding: 15px;">
            <h5 style="font-size: 1.125rem; font-weight: bold; margin-bottom: 10px;"><%= product.name %></h5>
           
            <%= button_to "Agregar al Carrito", add_to_list_path(list_product: { product_id: product.id }), method: :post, class: 'btn btn-primary', style: 'display: inline-block; margin-top: 10px; background-color: blue; color: white; text-decoration: none; padding: 10px 15px; border-radius: 5px;' %>
          </div>
        </div>
       
      
    <% end %>
  </div>

</div>
